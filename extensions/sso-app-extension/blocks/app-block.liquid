<span style="color: {{ block.settings.color }}">
  App blocks let you build powerful integrations with online store themes.
</span>

{% schema %}
{
  "name": "Hello World",
  "target": "section",
  "stylesheet": "app.css",
  "javascript": "app.js",
  "settings": [
    {
      "label": "Color",
      "id": "color",
      "type": "color",
      "default": "#000000"
    }
  ]
}
{% endschema %}
